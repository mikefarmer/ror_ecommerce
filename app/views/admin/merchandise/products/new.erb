<% content_for :head do %>
  <meta name="robots" content="noarchive"/>
  <meta name="robots" content="noindex, nofollow"/>
  <%= stylesheet_link_tag "modstyles" %>
  <%= stylesheet_link_tag "markdown" %>
  <%= javascript_include_tag "admin/editor/showdown" %>
  <%= javascript_include_tag "admin/editor/wmd" %>
  <%= javascript_include_tag "admin/editor/textarearesizer" %>
  <%= javascript_include_tag "admin/editor/elastic" %>
  <%= javascript_include_tag "admin/editor/highlight" %>
  <%= javascript_include_tag "admin/editor" %>
<% end %>

<%= render :partial => '/admin/merchandise/sub_header'%>

<h2>New Product</h2>

<%= render :partial => 'preview' %>

<% content_for :sidebar do %>
  <div id="article-sidebar" class="sidebar">
    <%= form_for @product, :url  => admin_merchandise_products_path,
                            :html => {:class => ''}  do |form| %>
      <%#= render :partial => '/admin/merchandise/products/form', :locals => {:form => form}%>
      <%= render :partial => 'sidebar', :locals => {:form => form } %>
      <div class="button generic_submit_button">
        <%= submit_tag "Create",
                        :class  => "button",
                        :id     => "create_product_button" %>
      </div>
    <% end %>
  </div>
<% end %>